<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenuController"
            stylesheets="@../CSS/style1.css"
            prefHeight="400.0" prefWidth="600.0">


    <center>
        <VBox alignment="CENTER" spacing="20" fx:id="vbox">
            <Label text="welcome !"/>

            <TextField promptText="username" maxWidth="300" fx:id="username"/>
            <PasswordField promptText="password" maxWidth="300" fx:id="password"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="submit" onMouseClicked="#submit" fx:id="submit"/>
                <Button text="signup" onMouseClicked="#signup"/>
                <Button text="forgot password" onMouseClicked="#forgotPassword"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
