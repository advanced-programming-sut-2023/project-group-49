<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SignupMenuController"
            stylesheets="@../CSS/style1.css"
            prefHeight="400.0" prefWidth="600.0">


    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="welcome!" id="label"/>
            <TextField promptText="username" maxWidth="200" fx:id="Username" styleClass="text-input"/>
            <PasswordField promptText="password" maxWidth="200" fx:id="Password" styleClass="text-input2"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Sign up" onMouseClicked="#signup"/>
                <Button text="Login" onMouseClicked="#login"/>
                <Button text="Skip" onMouseClicked="#skip"/>
                <Button text="Avatar change" onMouseClicked="#toChangeAvatar"/>

            </HBox>
        </VBox>
    </center>

</BorderPane>
